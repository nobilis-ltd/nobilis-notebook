<% if @note_books.blank? %>
  <p>You have not created any notebooks yet.</p>
<% else %>
  <ul id = "note_books">
     <% @note_books.each do |c| %>
     <li><%= link_to c.name, {:action => 'show', :id => c.id} %></li>
     <% end %>
  </ul>
  <% end %>
  <p><%= link_to "Add new Notebook", {:action => 'create' }%></p>
