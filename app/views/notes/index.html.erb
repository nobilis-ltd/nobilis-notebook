<div class="holder">
  <h2><small class="dark-grey-text"><span class="glyphicon glyphicon-book"></span></small>&ensp;My Notes</h2>
  <hr>
  <div class="row">
    <% @notes.each do |note|%>
      <div class="col-sm-4 col-md-4 col-lg-3 card note" onclick="Turbolinks.visit('<%= user_note_path(current_user, note)%>')">
        <h4 class="grey-text"><%= note.title.truncate(50) %></h4>
        <p>
          Last edited: <%= note.updated_at.to_s(:long_ordinal) %><br><br>
          <% if note.public %>
            <span class="badge green-bg">
              <span class="glyphicon glyphicon-eye-open"></span>&ensp;
              PUBLIC
            </span>
          <% else %>
            <span class="badge">
              <span class="glyphicon glyphicon-eye-close"></span>&ensp;
              PRIVATE
            </span>
          <% end %>
        </p>
      </div>
    <% end %>
      <div class="col-sm-4 col-md-4 col-lg-3 card note new" onclick="Turbolinks.visit('<%= new_user_note_path(current_user)%>')">
        <h4 class="grey-text">
          <span class="glyphicon glyphicon-pencil"></span>
          New note...
        </h4>
      </div>
  </div>
</div>