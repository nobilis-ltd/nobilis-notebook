<div class="row margin-bottom-50">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="col-sm-12">
        <%= link_to user_notes_path(current_user), class:"btn grey-bg" do %>
          <span class="glyphicon glyphicon-arrow-left"></span>&ensp;
          Back to My Notes
        <% end %>
        <hr>
      </div>
      <div class="col-xs-1">
        <h1 class="text-center">
          <span class="glyphicon glyphicon-file"></span>
        </h1>
      </div>
      <div class="col-xs-11">
        <h3><%= @note.title %></h3>
        <p>
          <span class="glyphicon glyphicon-book"></span>&ensp;
          My Notes,
          Last Edited: <%= @note.updated_at.to_s(:long_ordinal) %>.
        </p>
        <p class="actions">
          <%= link_to edit_user_note_path(current_user, @note), class:"btn grey-bg" do%>
            <span class="glyphicon glyphicon-pencil"></span>&ensp;Edit Note
          <% end %>
          <%= link_to user_note_path(current_user, @note), class:"btn red-bg", method: :delete do %>
            <span class="glyphicon glyphicon-trash"></span>&ensp;Delete Note
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="holder col-md-8 col-md-offset-2">
    <div class="row">
      <div class="col-sm-12 rendered-note">
        <%= render "test"%>
      </div>
    </div>
  </div>
</div>