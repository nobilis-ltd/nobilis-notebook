<!-- 
  Allowed Flash Types: "error", "success", "warning", "info"
-->
<% if flash %>
  <% flash.each do |flash_type, text|%>
    <script>
      $.toast({
          text: "<%= text %>",
          icon: "<%= flash_type %>",
          loader: false,
          position: 'top-right',
          hideAfter: 5000
      })
    </script>
  <% end %>
<% end %>